<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Comment entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog.each do |blog| %>

    <% blog.comments.each do |comment| %>

        <p><%= comment.author %></p>
        <p><%= comment.comment_entry %></p>
    <% end %>
<% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
